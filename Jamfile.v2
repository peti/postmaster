# build postmaster

exe postmaster
    : main.cpp
    : <use>/boost
      <use>/boost/log    <library>/boost/log//boost_log
      <use>/boost/test   <library>/boost/test//boost_prg_exec_monitor
      <use>/boost/thread <library>/boost/thread//boost_thread
      <use>/boost/system <library>/boost/system//boost_system
    : <threading>multi
    ;
